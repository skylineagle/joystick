{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/config.ts"],
  "exclude": ["node_modules", "dist"]
}
